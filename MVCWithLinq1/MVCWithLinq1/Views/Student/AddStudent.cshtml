@model MVCWithLinq1.Models.Student

@{
    ViewBag.Title = "Add Student";
}

<h2 class="text-center">Add Student</h2>

@using (Html.BeginForm("AddStudent", "Student", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container" style="max-width: 500px;">
        <div class="form-group">
            @Html.LabelFor(s => s.Sid)
            @Html.TextBoxFor(s => s.Sid, new { @class = "form-control", placeholder = "Enter Student ID" })
        </div>

        <div class="form-group">
            @Html.LabelFor(s => s.Name)
            @Html.TextBoxFor(s => s.Name, new { @class = "form-control", placeholder = "Enter Name" })
        </div>

        <div class="form-group">
            @Html.LabelFor(s => s.Class)
            @Html.TextBoxFor(s => s.Class, new { @class = "form-control", placeholder = "Enter Class" })
        </div>

        <div class="form-group">
            @Html.LabelFor(s => s.Fees)
            @Html.TextBoxFor(s => s.Fees, new { @class = "form-control", placeholder = "Enter Fees" })
            <br />
        </div>

        <div class="form-group">
            <label for="selectedFile">Upload Photo</label>
            <input type="file" name="selectedFile" class="form-control-file" />
            <br /><br />
        </div>

        <div class="form-group text-center">
            <input type="submit" value="Submit" class="btn btn-primary" />
            <input type="reset" value="Reset" class="btn btn-secondary ml-2" />
        </div>
    </div>
}
